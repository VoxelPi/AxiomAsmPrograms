{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "axiom assemble",
            "type": "shell",
            "command": "axiom asm \"${file}\" \"${workspaceFolder}\\output\\${fileBasenameNoExtension}.bin\" -r -a ax08",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "axiom flash",
            "type": "shell",
            "command": "axiom bridge upload \"${workspaceFolder}\\output\\${fileBasenameNoExtension}.bin\" -p COM7 -a ax08",
            "problemMatcher": [],
        }
    ]
}
